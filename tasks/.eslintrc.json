{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:promise/recommended"],
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["promise"],
  "globals": {
    "Promise": false
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "promise/always-return": "off",
    "promise/avoid-new": "off",
    "promise/no-promise-in-callback": "off"
  }
}
